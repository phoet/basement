.box
  .box_title=link_to('GitHub Gists', {:controller=>'work', :action=>'github'}, {:title=>'GitHub Gists'})
  .box_content
    -if gists.present?
      %ul
        - gists[0..4].compact.each do |gist|
          %li
            %a{:href=>"http://gist.github.com/#{gist.id}", :title=>gist.description}= gist.description
