.box
	.box_title=link_to('Github', {:controller=>'work', :action=>'github'}, {:title=>'GitHub-Projekte'})
	.box_content
		%ul
			-repos[0..4].each() do |repo|
				%li
					%a{:href=>"http://github.com/phoet/#{repo.name}", :title=>repo.name}= repo.name
			-gists[0..4].each() do |gist|
				%li
					%a{:href=>"http://gist.github.com/#{gist.repo}", :title=>gist.description}= gist.description
